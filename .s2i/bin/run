#!/bin/bash -e

echo "---> RUNning conatiner..."

case $cluster in
    "usage")
        echo "Usage!"
        /usr/libexec/s2i/usage
        exit 0
        ;;
    "yes")
        echo "Running crate in cluster mode"
        exec /app/crate/bin/crate
        ;;
    *)
        echo "Running bash"
        exec /bin/bash
        ;;
esac